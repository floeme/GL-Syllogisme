{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "build",
    "strict": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "typedocOptions": {
    "entryPoints": ["src/main.tsx", "src/model/*.ts"],
    "out": "docs"
  }
}
